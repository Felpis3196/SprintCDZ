@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Reenviar e-mail de confirmação";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h2 class="col-md-6 alert alert-warning text-center mx-auto" role="alert">Digite seu E-mail</h2>
<hr />
<div class="text-center">
    <div class="col-md-6 mx-auto">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="nome@exemplo.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-50 btn btn-lg btn-secondary">Reenviar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
