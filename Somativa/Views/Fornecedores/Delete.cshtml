@model Somativa.Models.Fornecedor

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-black">Você deseja apagar isso?</h1>


<div class="text-black">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FornecedorId" />
        <a asp-action="Index" class="btn btn-secondary m-2">
            <svg bootstrap-icon="ArrowReturnLeft" width="20" height="20" aria-label="Voltar"></svg>
            Voltar
        </a>
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
