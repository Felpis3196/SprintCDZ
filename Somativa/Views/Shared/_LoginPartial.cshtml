
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.UI.V4.Pages.Account.Internal;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav navbar-expand-md navbar-toggleable-md">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><svg bootstrap-icon="PersonCheckFill" width="35" height="30" aria-label="Login"></svg><span class="d-block d-md-none d-lg-block">Hello @User.Identity?.Name!</span></a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark"><svg bootstrap-icon="BoxArrowRight" width="35" height="30" aria-label="Login"></svg><span class="d-block d-md-none d-lg-block">Sair</span></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark fs-5" asp-area="Identity" asp-page="/Account/Register"><svg bootstrap-icon="PersonPlusFill" width="35" height="30" aria-label="Registrar"></svg>Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark fs-5" asp-area="Identity" asp-page="/Account/Login"><svg bootstrap-icon="PersonFill" width="35" height="30" aria-label="Login"></svg>Login</a>
        </li>
    }
</ul>


