@model Somativa.Models.Venda

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-black">Detalhes</h1>

<div class="text-black">
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nota)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nota)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.ClienteId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataHora)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataHora)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VendaId" class="btn btn-primary">
        <svg bootstrap-icon="Pen" width="20" height="20" aria-label="Voltar"></svg>
        Editar
    </a>
    <a asp-action="Index" class="btn btn-danger m-2">
        <svg bootstrap-icon="ArrowReturnLeft" width="20" height="20" aria-label="Voltar"></svg>
        Voltar
    </a>
</div>
