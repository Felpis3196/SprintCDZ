@model Somativa.Models.VendaItem

@{
    ViewData["Title"] = "Create";
    var VendaIdAux = ViewData["VendaId"]; 
}

<h1>Create</h1>

<h4>VendaItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-id=@VendaIdAux>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display:none">
                <label asp-for="VendaId" class="control-label"></label>
                <input asp-for="VendaId" value="@VendaIdAux" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class ="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unitario" class="control-label"></label>
                <input asp-for="Unitario" class="form-control" />
                <span asp-validation-for="Unitario" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Salvar" class="btn btn-primary" />

                <a asp-controller="VendaItems" asp-action="Index" asp-route-id=@VendaIdAux class="btn btn-danger m-2">
                    <svg bootstrap-icon="ArrowReturnLeft" width="20" height="20" aria-label="Voltar"></svg>
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
